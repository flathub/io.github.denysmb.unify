{
  "app-id": "io.github.denysmb.unify",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.10",
  "base": "io.qt.qtwebengine.BaseApp",
  "base-version": "6.10",
  "sdk": "org.kde.Sdk",
  "command": "unify",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--socket=pulseaudio",
    "--device=all",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--own-name=org.mpris.MediaPlayer2.chromium.*",
    "--filesystem=xdg-download",
    "--env=QTWEBENGINEPROCESS_PATH=/app/bin/QtWebEngineProcess",
    "--env=QTWEBENGINE_CHROMIUM_FLAGS=--autoplay-policy=no-user-gesture-required --enable-features=WebRTCPipeWireCapturer --enable-widevine-cdm --disable-gpu --disable-gpu-compositing --disable-features=VizDisplayCompositor"
  ],
  "cleanup": ["/app/cleanup-BaseApp.sh"],
  "modules": [
    {
      "name": "unify",
      "buildsystem": "cmake-ninja",
      "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/DenysMb/Unify.git",
          "tag": "0.4.0",
          "commit": "c47d5081a2c0a511f3ee5acc8e479359e562e53b"
        }
      ]
    }
  ]
}
